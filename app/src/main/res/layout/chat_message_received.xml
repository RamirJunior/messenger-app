<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:elevation="16dp">

    <TextView
        android:id="@+id/textview_msg_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_message_received"
        android:lineSpacingMultiplier="1.2"
        android:maxWidth="280dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        android:text="@string/str_textview_dummy_message"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewReceived"
        app:layout_constraintTop_toTopOf="@+id/imageViewReceived" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewReceived"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>